</aside>
<button id="off-canvas-menu" class="icon-menu"></button>
<div id="off-canvas-overlay"></div>

<!-- {{applist}} -->
{{#each this}}<li data-region="{{region}}">
	<h3 class="nav-group-title">{{regionName}} ({{data.length}})</h3>
	<ul class="nav-item-list app-list">
	{{#each data}}<li data-id="{{id}}" class="truncate nav-truncate icon-app-{{#if progressing}}pending{{else}}{{ tolower stateDesc }}{{/if}}" title="{{name}} [{{stateDesc}}]">{{name}}{{#if usage}}<i class="icon-app-type-{{usage}}"></i>{{/if}}</li>{{/each}}
	</ul>
</li>{{else}}
<div class="nav-empty">{{ i18n "DASH_LBL_NO_APP" }}</div>
{{/each}}

<!-- {{stacklist}} -->
{{#each this}}{{#if data.length}}<li data-region="{{region}}">
	<h3 class="nav-group-title">{{regionName}} ({{data.length}})<button class="icon-new-stack tooltip" data-tooltip='{{i18n "IDE_COM_CREATE_NEW_STACK"}}'></button></h3>
	<ul class="nav-item-list stack-list">
	{{#each data}}<li data-id="{{id}}" class="truncate nav-truncate icon-stack-nav">{{name}}</li>{{/each}}</ul>
</li>{{/if}}{{/each}}

<!-- {{regionlist}} -->
{{#each this}}{{#unless data.length}}<li class="nav-group-title" data-region="{{region}}">{{regionName}} (0) <button class="icon-new-stack tooltip" data-tooltip='{{ i18n "IDE_COM_CREATE_NEW_STACK" }}'></button></li>{{/unless}}{{/each}}
