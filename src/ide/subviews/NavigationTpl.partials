<!-- {{navigation}} -->
<aside id="navigation">
  <nav>
    <button class="off-canvas-tab" id="off-canvas-app">{{ i18n "NAV_TIT_APPS" }}</button>
    <button class="off-canvas-tab selected" id="off-canvas-stack">{{ i18n "NAV_TIT_STACKS" }}</button>
  </nav>
  <ul id="nav-app-region" class="hide"></ul>
  <ul id="nav-stack-region"></ul>

